<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.UsuariosController"
            prefWidth="1100" prefHeight="760"
            style="-fx-background-color: #F3F4F6;">

    <!-- CONTAINER PRINCIPAL -->
    <VBox spacing="18" AnchorPane.topAnchor="18" AnchorPane.leftAnchor="18" AnchorPane.rightAnchor="18" AnchorPane.bottomAnchor="18">

        <!-- CABEÇALHO -->
        <VBox spacing="6">
            <Label text="Usuários" style="-fx-font-size:28px; -fx-font-weight:bold;" />
            <Label text="Gerencie os usuários e suas permissões de acesso ao sistema." style="-fx-text-fill:#6B7280;"/>
        </VBox>

        <!-- FORMULÁRIO DE CADASTRO (card) -->
        <VBox spacing="12" style="-fx-background-color:white; -fx-padding:18; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 8, 0, 0, 2);">
            <Label text="Cadastrar Novo Usuário" style="-fx-font-size:16px; -fx-font-weight:600;" />

            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="45"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="30"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                </columnConstraints>

                <!-- Linha 0 -->
                <Label text="Nome Completo" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label text="E-mail" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Senha" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <TextField fx:id="txtNome" promptText="Ex: Maria da Silva" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="Ex: maria.silva@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <PasswordField fx:id="txtSenha" promptText="••••••" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                <!-- Linha 2 -->
                <Label text="Nível de Acesso" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3">
                    <ComboBox fx:id="cbNivelAcesso" promptText="Selecione o nível" prefWidth="260"/>
                    <Button fx:id="btnCadastrar" text="Cadastrar Usuário" style="-fx-background-color:#B1812C; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:8 14;"/>
                </HBox>
            </GridPane>
        </VBox>

        <!-- BUSCA / FILTROS (card) -->
        <VBox spacing="12" style="-fx-background-color:white; -fx-padding:14; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.04), 6, 0, 0, 1);">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color:#F8FAFB; -fx-padding:10; -fx-background-radius:6;" HBox.hgrow="ALWAYS">
                    <TextField fx:id="txtBuscar" promptText="Buscar por nome ou e-mail..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <ComboBox fx:id="cbFiltroNivel" promptText="Nível de Acesso" prefWidth="160"/>
                <ComboBox fx:id="cbFiltroStatus" promptText="Status" prefWidth="140"/>
            </HBox>
        </VBox>

        <!-- TABELA DE USUÁRIOS -->
        <TableView fx:id="tableUsuarios" prefHeight="360" style="-fx-background-radius:8; -fx-background-color:white;">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="260"/>
                <TableColumn fx:id="colEmail" text="E-mail" prefWidth="320"/>
                <TableColumn fx:id="colNivel" text="Nível de Acesso" prefWidth="180"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                <TableColumn fx:id="colAcoes" text="Ações" prefWidth="120"/>
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
