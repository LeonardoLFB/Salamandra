<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ProdutosController"
            prefWidth="1100" prefHeight="680"
            style="-fx-background-color: #F3F4F6;">

    <!-- CONTAINER PRINCIPAL -->
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- TÍTULO -->
        <VBox spacing="4">
            <Label text="Produtos" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            <Label text="Gerencie os produtos e o estoque da sua loja."
                   style="-fx-text-fill: #6B7280; -fx-font-size: 14px;"/>
        </VBox>

        <!-- BARRA DE AÇÕES SUPERIOR -->
        <HBox spacing="15">

            <!-- CAMPO DE BUSCA -->
            <HBox alignment="CENTER_LEFT"
                  spacing="10"
                  style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8;"
                  HBox.hgrow="ALWAYS">

                <TextField fx:id="txtSearch"
                           promptText="Buscar por nome ou descrição..."
                           style="-fx-background-color: transparent; -fx-border-color: transparent;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- FILTRO POR CATEGORIA -->
            <ComboBox fx:id="cbCategoria"
                      promptText="Categoria"
                      prefWidth="160"
                      style="-fx-background-radius: 8;"/>

            <!-- FILTRO POR STATUS -->
            <ComboBox fx:id="cbStatus"
                      promptText="Status"
                      prefWidth="160"
                      style="-fx-background-radius: 8;"/>

            <!-- BOTÃO ADICIONAR -->
            <Button fx:id="btnAdd"
                    text="+ Adicionar Produto"
                    style="-fx-background-color: #B1812C; -fx-text-fill: white; 
                           -fx-background-radius: 8; -fx-padding: 8 16;"/>
        </HBox>

        <!-- TABELA -->
        <TableView fx:id="tableProducts"
                   prefHeight="520"
                   style="-fx-background-radius: 10; -fx-background-color: white;">

            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="450"/>
                <TableColumn fx:id="colPreco" text="Preço" prefWidth="120"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
                <TableColumn fx:id="colAcoes" text="Ações" prefWidth="120"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
