<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EstoqueController"
            prefWidth="1200" prefHeight="760"
            style="-fx-background-color: #F3F4F6;">

    <!-- Container principal -->
    <VBox spacing="18" AnchorPane.topAnchor="18" AnchorPane.leftAnchor="18" AnchorPane.rightAnchor="18" AnchorPane.bottomAnchor="18">

        <!-- Cabeçalho -->
        <VBox spacing="6">
            <Label text="Estoque" style="-fx-font-size:28px; -fx-font-weight:bold;" />
            <Label text="Gerencie os produtos, quantidades e preços do seu inventário." style="-fx-text-fill:#6B7280;"/>
        </VBox>

        <!-- Card: Formulário de cadastro -->
        <VBox spacing="12"
              style="-fx-background-color:white; -fx-padding:18; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 8, 0, 0, 2);">

            <Label text="Cadastrar Novo Produto" style="-fx-font-size:16px; -fx-font-weight:600;" />

            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="60" hgrow="ALWAYS"/>
                    <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
                    <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Linha 0 -->
                <Label text="Nome do Produto" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label text="Código" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Quantidade" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <TextField fx:id="txtNomeProduto" promptText="Ex: Incenso de Sândalo" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodigo" promptText="Ex: INC001" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <TextField fx:id="txtQuantidade" promptText="Ex: 50" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                <!-- Linha 2 -->
                <Label text="Preço de Custo (R$)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label text="Preço de Venda (R$)" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Status de Estoque" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                <TextField fx:id="txtPrecoCusto" promptText="Ex: 5.50" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrecoVenda" promptText="Ex: 9.90" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <ComboBox fx:id="cbStatusProduto" promptText="Em estoque / Baixo / Fora" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

                <!-- Botão cadastrar alinhado à direita -->
                <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="3" alignment="CENTER_RIGHT">
                    <Button fx:id="btnCadastrarProduto" text="Cadastrar Produto"
                            style="-fx-background-color:#B1812C; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:8 16;" />
                </HBox>
            </GridPane>
        </VBox>

        <!-- Card: Busca / filtros -->
        <VBox spacing="10" style="-fx-background-color:white; -fx-padding:12; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.04), 6, 0, 0, 1);">
            <HBox spacing="12" alignment="CENTER_LEFT">
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color:#F8FAFB; -fx-padding:10; -fx-background-radius:6;" HBox.hgrow="ALWAYS">
                    <TextField fx:id="txtBuscar" promptText="Buscar por nome ou código..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <ComboBox fx:id="cbFiltroStatus" promptText="Filtrar Status" prefWidth="160"/>
                <Button fx:id="btnNovoProduto" text="+ Novo Produto" style="-fx-background-color:#B1812C; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:8 14;"/>
            </HBox>
        </VBox>

        <!-- Tabela de produtos -->
        <TableView fx:id="productTable" prefHeight="420" style="-fx-background-radius:8; -fx-background-color:white;">
            <columns>
                <TableColumn fx:id="colNomeProduto" text="Nome do Produto" prefWidth="420"/>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="140"/>
                <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="110"/>
                <TableColumn fx:id="colPreco" text="Preço (R$)" prefWidth="120"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="160"/>
                <TableColumn fx:id="colAcoes" text="Ações" prefWidth="120"/>
            </columns>
        </TableView>

        <!-- Rodapé resumo -->
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-background-color:white; -fx-padding:10; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.02), 4, 0, 0, 1);">
            <Label fx:id="lblStatus" text="Pronto" />
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Total de itens:" />
            <Label fx:id="lblTotalItens" text="0" />
            <Separator orientation="VERTICAL"/>
            <Label text="Valor total em estoque: R$" />
            <Label fx:id="lblValorTotal" text="0.00" />
        </HBox>

    </VBox>

</AnchorPane>
