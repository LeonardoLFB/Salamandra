<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProdutoController">
   <top>
      <AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #b27700;" BorderPane.alignment="CENTER">
         <children>
            <!-- Título -->
            <Label layoutX="220.0" layoutY="30.0" text="Cadastrar Produto Novo" textFill="#f2f2f2">
               <font>
                  <Font name="Berlin Sans FB" size="24.0" />
               </font>
            </Label>
            
            <!-- Logo -->
            <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="560.0" layoutY="20.0" preserveRatio="true">
               <image>
                  <Image url="@../img/LogoBranco.png" />
               </image>
            </ImageView>
            
            <!-- Formulário -->
            <VBox layoutX="50.0" layoutY="100.0" prefWidth="600.0" spacing="20.0">
               
               <!-- Nome do Produto -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Nome do produto:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNome" prefWidth="400.0" promptText="Digite o nome do produto" />
               </HBox>
               
               <!-- Código -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Código:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCodigo" prefWidth="400.0" promptText="Digite o código" />
               </HBox>
               
               <!-- Quantidade -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Quantidade:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtQuantidade" prefWidth="400.0" promptText="Digite a quantidade em estoque" />
               </HBox>
               
               <!-- Preço -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Preço:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPreco" prefWidth="400.0" promptText="Digite o preço (ex: 19.90)" />
               </HBox>
               
               <!-- Categoria -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Categoria:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCategoria" prefWidth="400.0" promptText="Digite a categoria do produto" />
               </HBox>
               
               <!-- Lote -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Lote:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtLote" prefWidth="400.0" promptText="Digite o lote" />
               </HBox>
               
               <!-- Fornecedor -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Fornecedor:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtFornecedor" prefWidth="400.0" promptText="Digite o fornecedor" />
               </HBox>
               
               <!-- Descrição -->
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Descrição:" textFill="#f2f2f2" prefWidth="150.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDescricao" prefWidth="400.0" promptText="Digite uma descrição do produto" />
               </HBox>
               
            </VBox>
            
            <!-- Botões -->
            <HBox alignment="CENTER" layoutX="200.0" layoutY="530.0" spacing="20.0">
               <Button fx:id="btnSalvar" onAction="#salvarProduto" mnemonicParsing="false" 
                       text="Salvar" prefWidth="120.0" prefHeight="35.0"
                       style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                  <font>
                     <Font name="Berlin Sans FB Bold" size="14.0" />
                  </font>
               </Button>
               <Button fx:id="btnCancelar" onAction="#cancelar" mnemonicParsing="false" 
                       text="Cancelar" prefWidth="120.0" prefHeight="35.0"
                       style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                  <font>
                     <Font name="Berlin Sans FB Bold" size="14.0" />
                  </font>
               </Button>
            </HBox>
            
         </children>
      </AnchorPane>
   </top>
</BorderPane>