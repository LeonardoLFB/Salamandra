<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="680" prefWidth="900.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProdutosController">

    <!-- CONTAINER PRINCIPAL -->
    <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <!-- TÍTULO -->
        <VBox spacing="4">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Produtos" />
            <Label style="-fx-text-fill: #6B7280; -fx-font-size: 14px;" text="Gerencie os produtos e o estoque da sua loja." />
        </VBox>

        <!-- BARRA DE AÇÕES SUPERIOR -->
        <HBox spacing="15">

            <!-- CAMPO DE BUSCA -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">

                <TextField fx:id="txtSearch" promptText="Buscar por nome ou descrição..." style="-fx-background-color: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- FILTRO POR CATEGORIA -->
            <ComboBox fx:id="cbCategoria" prefWidth="160" promptText="Categoria" style="-fx-background-radius: 8;" />

            <!-- FILTRO POR STATUS -->
            <ComboBox fx:id="cbStatus" prefWidth="160" promptText="Status" style="-fx-background-radius: 8;" />

            <!-- BOTÃO ADICIONAR -->
            <Button fx:id="btnAdd" style="-fx-background-color: #B1812C; -fx-text-fill: white;                             -fx-background-radius: 8; -fx-padding: 8 16;" text="+ Adicionar Produto" />
        </HBox>

        <!-- TABELA -->
        <TableView fx:id="tableProducts" prefHeight="520" style="-fx-background-radius: 10; -fx-background-color: white;">

            <columns>
                <TableColumn fx:id="colNome" prefWidth="200" text="Nome" />
                <TableColumn fx:id="colDescricao" prefWidth="341.6000061035156" text="Descrição" />
                <TableColumn fx:id="colPreco" prefWidth="198.39996337890625" text="Preço" />
                <TableColumn fx:id="colStatus" prefWidth="123.2000732421875" text="Status" />
                <TableColumn fx:id="colAcoes" prefWidth="168.7999267578125" text="Ações" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
